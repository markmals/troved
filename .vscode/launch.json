{
    // Variables reference: https://code.visualstudio.com/docs/editor/variables-reference
    // Launch.json reference: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Deno: Debug App",
            "type": "node",
            "program": "${workspaceFolder}/src/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "${userHome}/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Deno: Debug File",
            "type": "node",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "${userHome}/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "args": [
                "--watch",
                "media/Completed",
                "--output-tv",
                "media/TV",
                "--output-movies",
                "media/Movies",
            ],
            "attachSimplePort": 9229
        }
    ]
}