{
    "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
    "fmt": {
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "always"
    },
    "lint": {
        "rules": {
            "exclude": ["prefer-const", "no-empty", "no-explicit-any"]
        }
    },
    "tasks": {
        "serve": "deno run -A src/transcode.ts"
    },
    "importMap": "import-map.json"
}
